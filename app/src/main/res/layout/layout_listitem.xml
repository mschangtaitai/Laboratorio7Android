<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_layout"
>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="item"
              android:id="@+id/item_tittle"
              android:padding="2dp" android:layout_marginTop="20dp" android:layout_marginStart="20dp"
              android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
              android:textColor="#000"
              android:textSize="20sp"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:id="@+id/cant_item"
              android:padding="3dp"
              android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
              android:layout_marginTop="0dp" android:layout_below="@+id/item_tittle"
              android:layout_alignParentStart="true" android:layout_marginStart="30dp"
              android:textSize="40sp"
              android:textColor="#000"
    />

    <Button
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonSub" android:layout_marginTop="45dp" android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/cant_item"
            android:layout_marginEnd="32dp"
            android:background="@drawable/btn_rounded" android:padding="0dp"
            android:text="-"
            android:textSize="30dp"
            />

    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonAdd" android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/imageButtonSub"
            android:layout_marginEnd="32dp"
            android:background="@drawable/btn_rounded" android:padding="0dp"
            android:text="+"
            android:textSize="30dp"
            />



</RelativeLayout>